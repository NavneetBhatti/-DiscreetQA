@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var users in Model)
        {
            <tr>
                <td>
                    @users.Email
                </td>
                <td>
                    @if (users.LockoutEnd != null)
                    {
                        <form method="post" asp-action="Index">
                            <button type="submit" class="btn btn-primary" asp-route-UserId="@users.Id">Unlock</button>
                        </form>
                    }
                    else
                    {
                        <span>-</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

